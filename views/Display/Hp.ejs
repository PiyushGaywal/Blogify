<!DOCTYPE html>
<html>
<head>
  <title>Blogify</title>
  <link rel="stylesheet" href="/Display/Hp.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body>
  <%- include('../Partials/nav') %>

  <div class="container mt-3 d-flex flex-wrap gap-3">
    <% blog.forEach(blog => { %> 
      <div class="card" style="width: 18rem;">
        <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"> <%= blog.title %> </h5>
          <a href="/blog/<%= blog._id %>" class="btn btn-primary mb-2">View</a>

          <% if (user && user.isAdmin) { %>
            <form action="/blog/delete/<%= blog._id %>" method="POST">
  <button type="submit" class="btn btn-danger">Delete</button>
</form>

          <% } %>
        </div>
      </div>
    <% }); %>
  </div>
</body>
</html>
